        <th style="width:8%;white-space: nowrap;">STOK DURUMU</th>
      </tr>

      {{#each lines}}
      <tr class="data-row">
        <td class="imgCell">
          {{#if hasImage}}
            <img src="{{imageDataUri}}" />
          {{/if}}
        </td>

        <td class="product-desc">
          <div>{{productName}}</div>
          <div>{{usageArea}}</div>

          {{#if description}}
            <div style="font-size:7pt; margin-top: 4px;">{{description}}</div>
          {{/if}}

          <div style="margin-top: 8px;">{{dimension}}</div>
        </td>

        <td>{{quantity}}</td>
        <td>{{unitPrice}}</td>
        <td>{{subTotal}}</td>
        <td>{{totalPrice}}</td>
        <td>{{stockStatus}}</td>
      </tr>

      {{#if pageBreakAfter}}
        <tr><td colspan="7"><div class="pageBreak"></div></td></tr>
      {{/if}}
      {{/each}}
    </table>

    <div class="totals-wrap">
      <table style="width:100%; margin-top:25px; font-size:10pt; border-collapse:collapse;">
